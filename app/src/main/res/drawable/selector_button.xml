<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#ccc" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="1.5dp"
                android:color="#66383838" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
</selector>