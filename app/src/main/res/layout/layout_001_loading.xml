<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progress_parent"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:background="#ff0">

    <FrameLayout
        android:layout_width="@dimen/layout_loading_size"
        android:layout_height="@dimen/layout_loading_size"
        android:layout_centerInParent="true"
        android:background="#33383838">

        <ProgressBar
            android:id="@+id/loading_view_a"
            android:layout_width="@dimen/layout_loading_size"
            android:layout_height="@dimen/layout_loading_size"
            android:indeterminateDrawable="@drawable/progress_a" />

        <ProgressBar
            android:id="@+id/loading_view_b"
            android:layout_width="@dimen/layout_loading_size"
            android:layout_height="@dimen/layout_loading_size"
            android:indeterminateDrawable="@drawable/progress_b" />
    </FrameLayout>
</RelativeLayout>