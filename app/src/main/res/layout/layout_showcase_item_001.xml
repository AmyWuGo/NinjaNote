<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="@dimen/layout_showcase_card_parent_height"
    android:paddingBottom="@dimen/layout_showcase_card_parent_padding"
    android:paddingEnd="@dimen/layout_showcase_card_parent_padding_2"
    android:paddingStart="@dimen/layout_showcase_card_parent_padding_2"
    android:paddingTop="@dimen/layout_showcase_card_parent_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_showcase_card_height"
        card_view:cardCornerRadius="@dimen/layout_showcase_card_corner"
        card_view:cardElevation="0dp">

        <ImageView
            android:id="@+id/info_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/undertale_001" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_showcase_card_info_height"
            android:layout_gravity="bottom"
            android:background="@drawable/photo_info_panel_bottom_background"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/padding_05"
            android:paddingStart="@dimen/padding_05"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="aaaaaaaaaaaaaaaaaaaaa" />
    </android.support.v7.widget.CardView>
</LinearLayout>
